<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiApp1.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp1">

    <ShellContent
        Title="首頁"
        ContentTemplate="{DataTemplate views:IndexPage}"
        Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" Route="IndexPage"/>

    <Shell.ToolbarItems>
        <ToolbarItem Text="設定" Clicked="Setting_Clicked" IconImageSource="setting"/>
    </Shell.ToolbarItems>
    

</Shell>
