<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.Login"
             Title="登入頁面"
             BackgroundColor="#6C7156">

    <VerticalStackLayout Margin="15" Padding="30, 60, 30, 30">
        <Label Text="登入" Padding="0, 0 ,50, 0" FontSize="30" TextColor="AntiqueWhite"/>
        <Label Text="帳號：" FontSize="25" TextColor="White" />
        <Entry />
        <Label Text="密碼：" FontSize="25" TextColor="White" />
        <Entry IsPassword="True" />
        <Button Text="登入" FontSize="25" BackgroundColor="#0094FF" Clicked="LoginButton_Clicked" />
    </VerticalStackLayout>
</ContentPage>